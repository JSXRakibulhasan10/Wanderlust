<% layout('/layouts/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row">
    <!-- Title -->
    <div class="col-8 offset-2 text-center mb-4">
      <h2 class="fw-bold"><%= listing.title %></h2>
    </div>

    <!-- Listing Image and Details -->
    <div class="col-md-8 offset-2">
      <div class="card shadow-lg border-0 rounded-4">
        <img
          src="<%= listing.image %>"
          class="card-img-top rounded-top-4 object-fit-cover"
          alt="listing image"
          style="max-height: 400px; width: 100%; object-fit: cover"
        />

        <div class="card-body p-4">
          <p class="mb-1 text-muted">
            <i class="bi bi-person-circle text-primary me-1"></i>
            Posted by: <% if (listing.owner) { %>
            <span class="fw-semibold text-primary"
              ><%= listing.owner.username %></span
            >
            <% } else { %>
            <span class="text-muted">Unknown</span>
            <% } %>
          </p>

          <p class="card-text mt-3"><%= listing.description %></p>
          <p class="card-text fw-bold fs-5 text-success">
            <%= listing.price.toLocaleString("bn-BD", { style: 'currency',
            currency: 'BDT' }) %>
          </p>
          <p class="card-text text-muted">
            <i class="bi bi-geo-alt-fill"></i>
            <%= listing.location %>, <%= listing.country %>
          </p>
        </div>
      </div>
    </div>

    <!-- Edit/Delete Buttons -->
    <% if (currUser && listing.owner && currUser._id.toString() ===
    listing.owner._id.toString()) { %>
    <div
      class="col-md-8 offset-2 mt-3 d-flex justify-content-between align-items-center"
    >
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-2"
        >Edit</a
      >
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>

    <!-- Review Form -->
    <% if (currUser) { %>
    <div class="col-md-8 offset-2 mt-5">
      <h4 class="mb-3">Leave a Review</h4>
      <form
        action="/listings/<%= listing.id %>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            id="customRange2"
            name="review[rating]"
          />
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="4"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
    <% } %>

    <!-- Reviews Section -->
    <div class="col-md-8 offset-2 mt-5">
      <hr />
      <h4 class="mb-4">All Reviews</h4>
      <div class="row gy-4">
        <% for (review of listing.reviews) { %>
        <div class="col-md-6">
          <div
            class="card shadow-sm border border-2 rounded-4 p-3 review-box h-100"
          >
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <div class="d-flex align-items-center mb-2">
                  <i class="bi bi-person-circle fs-4 text-primary me-2"></i>
                  <h5 class="mb-0 fw-bold text-primary">
                    @ <% if (review.author) { %> <%= review.author.username %>
                    <% } else { %> Anonymous <% } %>
                  </h5>
                </div>
                <p class="text-secondary mb-1">
                  <i class="bi bi-chat-left-quote-fill me-1 text-dark"></i>
                  <%= review.comment %>
                </p>
                <p>
                  <span class="badge bg-warning text-dark"
                    ><%= review.rating %> ‚≠ê</span
                  >
                </p>
              </div>
              <% if (currUser && review.author && currUser._id.toString() ===
              review.author._id.toString()) { %>
              <form
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="post"
                class="text-end mt-2"
              >
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
